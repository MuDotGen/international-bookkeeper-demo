rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow only authenticated users to read or write documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authorized users to read and write documents
    match /books/{docId} {
      allow read: if request.auth != null && doc.data.authorizedUsers.hasAny([request.auth.uid]);
      allow write: if request.auth != null && doc.data.authorizedUsers.has(request.auth.uid);
    }
  }
}
